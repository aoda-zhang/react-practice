{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto"
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "./.vscode/*",
      "node_modules",
      "src/shared/i18n/*",
      "src/shared/libs/*",
      "src/shared/assets/**/*/"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "lineWidth": 120
    }
  }
}
